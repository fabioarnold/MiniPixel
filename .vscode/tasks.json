{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "zig build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation":"autoDetect"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "never",
				"revealProblems": "onProblem",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			}
		}
	]
}